{
    "restartable": "rs",
    "ignore": [
      ".git",
      ".gitignore",
      "node_modules/**/node_modules",
      "nodemon.json",
      "yarn.lock"
    ],
    "verbose": true,
    "execMap": {
      "js": "node --harmony"
    },
    "events": {
      "restart": "osascript -e 'display notification \"App restarted due to:\n'$FILENAME'\" with title \"nodemon\"'"
    },
    "watch": [
      "server.js"
    ],
    "env": {
      "NODE_ENV": "development"
    },
    "ext": "js json"
  }